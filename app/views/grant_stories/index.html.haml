- model_class = GrantStory
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:_id)
      %th= model_class.human_attribute_name(:story)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @grant_stories.each do |grant_story|
      %tr
        %td= link_to grant_story.id, grant_story_path(grant_story)
        %td= grant_story._id
        %td= Sanitize.clean(grant_story.story)
        %td=l grant_story.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_grant_story_path(grant_story), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), grant_story_path(grant_story), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_grant_story_path, :class => 'btn btn-primary'

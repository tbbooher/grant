- model_class = GrantStory
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:_id) + ':'
  %br
  = @grant_story._id
%p
  %strong= model_class.human_attribute_name(:story) + ':'
  %br
  = @grant_story.story

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), grant_stories_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_grant_story_path(@grant_story), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), grant_story_path(@grant_story), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

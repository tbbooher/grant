- model_class = Registration
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong ID:
  %br
  = @registration._id
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @registration.email
%p
  %strong= model_class.human_attribute_name(:connection) + ':'
  %br
  = @registration.connection

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), registrations_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_registration_path(@registration), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), registration_path(@registration), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

- model_class = Registration
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th Email
      %th Connection
      %th Created At
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @registrations.each do |registration|
      %tr
        %td=link_to registration.email, edit_registration_path(registration) 
        %td= registration.connection
        %td=l registration.created_at
        %td
          = link_to t('.destroy', :default => t("helpers.links.destroy")), registration_path(registration), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to 'new', new_registration_path, :class => 'btn btn-primary'

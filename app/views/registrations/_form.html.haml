= simple_form_for(@registration, :html => {:class => 'form-horizontal' }) do |form|
  = form.input :email
  = form.input :connection, collection: [:home_school, :school, :air_force, :church, :local_community, :other].map{|c| [c.to_s.titleize, c]}, include_blank: false
  .form-actions
    = form.button :submit, "Submit Email", class: 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), registrations_path, :class => 'btn'
